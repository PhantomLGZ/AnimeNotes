<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimeNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AnimeNotes.NoActionbar" parent="Theme.AnimeNotes">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TitleColorDark">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/textColorHintDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelColorDark">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/textColorHintDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentColorDark">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/textColorHintDark</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/contentBackground</item>
    </style>

    <style name="ContentLabelColorDark" parent="ContentColorDark">
        <item name="android:background">@color/contentLabelBackground</item>
    </style>

    <style name="TextColorDark">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorHint">@color/textColorHintDark</item>
    </style>

    <style name="TextColorLight">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorHint">@color/textColorHintLight</item>
    </style>
</resources>